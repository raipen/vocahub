generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum SocialType {
  GOOGLE
  KAKAO
  NAVER
}

model User {
  uuid     String   @unique @id @default(uuid())
  name     String
  socialType SocialType @default(KAKAO)
  socialId String   
  wordbook Wordbook[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@unique([socialType, socialId])
}

model Wordbook {
  uuid      String   @unique @id @default(uuid())
  title     String
  user      User     @relation(fields: [userId], references: [uuid])
  userId    String
  voca      Voca[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isHidden  Boolean  @default(false)
}

model Voca {
  id        Int      @id @default(autoincrement())
  word      String
  meaning   Meaning[]
  checkCount Int      @default(0)
  order     Int      @default(0)
  wordbook  Wordbook @relation(fields: [wordbookId], references: [uuid])
  wordbookId String
}

model Meaning {
  id        Int      @id @default(autoincrement())
  meaning   String
  voca      Voca     @relation(fields: [vocaId], references: [id], onDelete: Cascade)
  vocaId    Int
}
