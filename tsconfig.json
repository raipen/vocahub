{
    "compilerOptions": {
        "strict": true,
        "target": "es2022",
        "module": "es2022",
        "moduleResolution": "Node",
        "outDir": "build",
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}