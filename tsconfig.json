{
    "compilerOptions": {
        "strict": true,
        "target": "es2022",
        "module": "es2022",
        "moduleResolution": "Node",
        "outDir": "build",
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@api": ["src/api"],
            "@config": ["src/config"],
            "@DTO/*": ["DTO/*"],
            "@loaders": ["src/loaders"],
            "@services/*": ["src/services/*"],
            "@utils/*": ["src/utils/*"],
            "@errors": ["errors"],
            "@errors/*": ["errors/*"],
            "@routes/*": ["src/api/routes/*"],
            "@hooks/*": ["src/api/hooks/*"],
            "@server": ["src/server"],
            "@repository/*": ["src/repository/*"],
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
