{
  "name": "word-memorization",
  "version": "1.0.0",
  "description": "for https://www.youtube.com/watch?v=HD79q6aXjPA",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "preinstall": "cd front && npm install",
    "dev:front": "cd front && npm start",
    "dev:back": "tsx watch src src/index.ts",
    "dev": "npm-run-all --parallel dev:front dev:back",
    "build": "cd front && npm run build",
    "start": "tsx src/index.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev --name init --preview-feature",
    "prisma:migrate:deploy": "prisma migrate deploy --name init --preview-feature"
  },
