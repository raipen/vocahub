    "fastify": "^4.26.0",
    "fastify-plugin": "^4.5.1",
    "fastify-schema-to-ts": "^1.0.1",
    "jsonwebtoken": "^9.0.2",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "prisma": "^5.9.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
